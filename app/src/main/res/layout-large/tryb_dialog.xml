<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1000dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:gravity="center"
        android:paddingBottom="50dp"
        android:paddingTop="50dp"
        android:text="Wybierz tryb pomiaru"
        android:textColor="#f4efef"
        android:textSize="42dp" />

    <RadioGroup
        android:id="@+id/rgroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:background="#222222"
        android:paddingBottom="50dp"
        android:paddingLeft="300dp"
        android:paddingTop="50dp">

        <RadioButton
            android:id="@+id/rbnormalny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            android:buttonTint="@android:color/white"
            android:checked="false"
            android:text="Normalny"
            android:textColor="#f4efef"
            android:textSize="32dp" />

        <RadioButton
            android:id="@+id/rbkryt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            android:buttonTint="@android:color/white"
            android:checked="false"
            android:text="Krytyczny"
            android:textColor="#f4efef"
            android:textSize="32dp" />

        <RadioButton
            android:id="@+id/rbkosz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            android:buttonTint="@android:color/white"
            android:checked="false"
            android:text="Kosz"
            android:textColor="#f4efef"
            android:textSize="32dp" />

        <RadioButton
            android:id="@+id/rbawaryjny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@android:color/white"
            android:checked="false"
            android:text="Awaryjny"
            android:textColor="#f4efef"
            android:textSize="32dp" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rgroup1"
        android:background="#222222"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnok"
            style="@style/buttonDialogTryb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="OK"
            android:textColor="@android:color/white"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btnanuluj"
            style="@style/buttonDialogTryb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="ANULUJ"
            android:textColor="@android:color/white"
            android:textSize="40sp" />
    </LinearLayout>
</RelativeLayout>