<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="1200dp"
    android:layout_height="match_parent"
    android:layout_x="0dp"
    android:background="#00ffffff"
    android:minHeight="1000dp"
    android:minWidth="1100dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="338dp"
        android:layout_marginTop="32dp"
        android:text="Logowanie"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/loginEd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="302dp"
        android:layout_marginTop="95dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <EditText
        android:id="@+id/passEd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/loginEd"
        android:layout_marginTop="181dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="322dp"
            android:layout_marginTop="94dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button31"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="1"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/button32"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_toEndOf="@+id/button1"
                    android:text="2"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/button33"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/button2"
                    android:text="3"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button34"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="4"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/button35"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_toEndOf="@+id/button34"
                    android:text="5"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/button25"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_toEndOf="@+id/button35"
                    android:text="6"
                    android:textSize="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button26"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignStart="@+id/button2"
                    android:layout_below="@+id/button2"
                    android:layout_weight="1"
                    android:text="7"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/button27"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/button2"
                    android:layout_toEndOf="@+id/button2"
                    android:text="8"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/button28"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/button2"
                    android:layout_toEndOf="@+id/button3"
                    android:text="9"
                    android:textSize="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button29"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="0"
                    android:textSize="30dp" />

                <ImageButton
                    android:id="@+id/button18"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/baseline_keyboard_backspace_black_18dp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button36"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ANULUJ"
            android:textSize="40dp" />

        <Button
            android:id="@+id/button37"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="166dp"
            android:text="OK"
            android:textSize="40dp" />
    </RelativeLayout>


</RelativeLayout>
