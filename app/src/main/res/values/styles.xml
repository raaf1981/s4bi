    <style name="AlertDialogCustom" parent="@android:style/Theme.Material.Dialog.Alert">
        <item name="android:textSize">26dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomAlertButtonN</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomAlertButtonY</item>
        <item name="android:icon">@android:drawable/ic_dialog_alert</item>
    </style>
    <style name="CustomAlertButtonY" parent="@android:style/Theme.Material.Dialog.Alert">
        <item name="android:textSize">36dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/holo_blue_bright</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <style name="CustomAlertButtonN" parent="@android:style/Theme.Material.Dialog.Alert">
